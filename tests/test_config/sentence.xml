<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../../protogeneia/schema.rng" schematypens="http://relaxng.org/ns/structure/1.0"?>
<config>

    <memory path="memory.csv" />
    <default-header>
        <header type="explicit">
            <key map-to="token">tok</key>
            <key map-to="lemma">lem</key>
            <key map-to="POS">pos</key>
        </header>
    </default-header>
    <corpora>
        <corpus path="../test_data/sentence.tsv" column_marker="TAB">
            <splitter name="punctuation" sentence_markers=".!:"/>
            <header type="default" />
        </corpus>
    </corpora>
</config>