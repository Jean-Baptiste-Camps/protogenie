<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="ppa_splitter/schema.rng" schematypens="http://relaxng.org/ns/structure/1.0"?>
<config>
    <memory path="memory.csv" />
    <default-header>
        <header type="order">
            <key map-to="token">0</key>
            <key map-to="lemma">1</key>
            <key map-to="POS">2</key>
            <key map-to="morph">3</key>
        </header>
    </default-header>
    <corpora>
        <corpus path="../test_data/chrestien.tsv" column_marker="TAB">
            <splitter name="token_window" window="20"/>
            <header type="default" />
        </corpus>
    </corpora>
</config>